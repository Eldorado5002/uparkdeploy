# Backend environment configuration
# Copy this file to .env and fill in your values

# Server
PORT=5000

# PostgreSQL (Neon) connection URL
# Prefer setting POSTGRES_URL. DATABASE_URL is used as a fallback.
POSTGRES_URL=postgresql://<user>:<password>@<host>/<db>?sslmode=require
# DATABASE_URL=

# Twilio credentials for real SMS OTP
# Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=5000
NODE_ENV=development

# PostgreSQL Database Configuration
# Use POSTGRES_URL as the primary connection string
POSTGRES_URL=postgresql://username:password@host:port/database?sslmode=require

# Alternative: Individual database connection parameters
# DB_HOST=your-host
# DB_PORT=5432
# DB_NAME=your-database-name
# DB_USER=your-username
# DB_PASSWORD=your-password
# DB_SSL=true

# Twilio Configuration (for SMS/OTP)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# MQTT Configuration (optional overrides)
# MQTT_BROKER=mqtt://broker.hivemq.com
# MQTT_TOPIC_PREFIX=parking_system_custom_123456/

# Security
# JWT_SECRET=your_jwt_secret_key_here

# Development/Debug
DEBUG=false

# Optional: Set NODE_ENV to production in deployments
# NODE_ENV=development
